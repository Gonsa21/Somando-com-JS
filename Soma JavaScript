   <h1>Soma com JavaScript</h1>
   <h3>Digite o um numero:<input type="number" id="num1"></h3>
   <h3>Agora digite outro numero<input type="number" id="num2"></h3>
   <button onclick="somar()">Somar</button>
   
   <section><h3><p id="resulti"></p></h3></section>


   <script>

    function somar() {


        let num1 = Number (document.getElementById("num1").value)
        let num2 = Number (document.getElementById("num2").value)

        let somado = num1+num2;
        let resultado = "O resultado Ã© " + somado
        
        document.getElementById("resulti").innerHTML = resultado

        


    }



   </script>
